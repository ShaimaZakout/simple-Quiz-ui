<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:gravity="center"
    android:background="@color/lightwhite"
    android:orientation="vertical"
    >

     <LinearLayout
         android:layout_width="400dp"
         android:layout_height="440dp"
         android:orientation="vertical"
         android:background="@drawable/lbackgrount"
         android:gravity="center"
         tools:ignore="Suspicious0dp">
          <TextView
             android:layout_width="200dp"
             android:layout_height="40dp"
             android:text="القائمة"
               android:textSize="20sp"
              android:textStyle="bold"
              android:textColor="@color/blackcolor"
              android:fontFamily="sans-serif-medium"
              android:gravity="center"
              android:layout_marginTop="16dp"

              />


        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:layout_marginTop="35dp"
            >

            <Button
                android:id="@+id/btn1"
                android:onClick="goToBtn1"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:text="1"
                android:textStyle="bold"
                android:textColor="@color/whitecolor"
                android:background="@drawable/btn_background"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btn2"
                android:onClick="goToBtn2"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:text="2"
                android:textStyle="bold"
                android:textColor="@color/whitecolor"
                android:background="@drawable/btn_background"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:textSize="20sp"/>
            <Button
                android:id="@+id/btn3"
                android:onClick="goToBtn3"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:text="3"
                android:textStyle="bold"
                android:textColor="@color/whitecolor"
                android:background="@drawable/btn_background"
                android:layout_margin="20dp"
                android:layout_weight="1"
               android:textSize="20sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:layout_marginBottom="35dp"
              >

            <Button
                android:id="@+id/btn4"
                android:onClick="goToBtn4"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:text="4"
                android:textStyle="bold"
                android:textColor="@color/whitecolor"
                android:background="@drawable/btn_background"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btn5"
                android:onClick="goToBtn5"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:text="5"
                android:textStyle="bold"
                android:textColor="@color/whitecolor"
                android:background="@drawable/btn_background"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:textSize="20sp"/>
            <Button
                android:id="@+id/btn6"
                android:onClick="goToBtn6"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:text="6"
                android:textStyle="bold"
                android:textColor="@color/whitecolor"
                android:background="@drawable/btn_background"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:textSize="20sp"/>
        </LinearLayout>

     </LinearLayout>







</LinearLayout>

